<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.videotutoriales.apitest"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="preferExternal">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="videotutoriales.apitest.activities.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" 
            android:configChanges="keyboard|keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="videotutoriales.apitest.activities.LifeCycleTest"
            android:configChanges="touchscreen|keyboardHidden|orientation" 
            android:label="@string/lifecycle_label">
        </activity>
        <activity 
            android:configChanges="keyboard|keyboardHidden" 
            android:name="videotutoriales.apitest.activities.SingleTouchTest"
            android:label="@string/singletouch_label">
        </activity>
        <activity 
            android:name="videotutoriales.apitest.activities.MultiTouchTest" 
            android:configChanges="keyboard|keyboardHidden"
            android:label="@string/multitouch_label">
        </activity>
        <activity 
            android:name="videotutoriales.apitest.activities.KeyTest" 
            android:configChanges="keyboard|keyboardHidden" 
            android:windowSoftInputMode="stateAlwaysVisible">
            <!-- Esto Ãºltimo para que muestre el teclado -->
        </activity>
        <activity 
            android:configChanges="keyboard|keyboardHidden|orientation" 
            android:screenOrientation="portrait" 
            android:name="videotutoriales.apitest.activities.AccelerometerTest">
        </activity>
        <activity 
            android:name="videotutoriales.apitest.activities.AssetsTest" 
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:configChanges="keyboard|keyboardHidden|orientation" 
            android:name="videotutoriales.apitest.activities.ExternalStorageTest" 
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="videotutoriales.apitest.activities.SoundPoolTest" 
            android:screenOrientation="portrait" 
            android:configChanges="keyboard|keyboardHidden|orientation">
        </activity>
        <activity 
            android:name="videotutoriales.apitest.activities.MediaPlayerTest" 
            android:configChanges="keyboard|keyboardHidden|orientation" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
